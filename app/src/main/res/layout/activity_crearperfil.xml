<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/volver"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/volver"
        android:onClick="botonVolver"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="650dp"
        android:layout_marginRight="280dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">


        <TextView
            android:id="@+id/selecionarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crearPerfil"
            android:textColor="@color/darkBlue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingresarUsuario"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:autofillHints="name"
            android:ems="10"
            android:hint="@string/ingresarNombre"
            android:inputType="text"
            android:textColorHint="@color/blueGray"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingresarRelacion"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:autofillHints="relation"
            android:ems="10"
            android:hint="@string/ingresarRelacion"
            android:inputType="text"
            android:textColorHint="@color/blueGray"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingresarEmail"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:autofillHints="emailAddress"
            android:ems="10"
            android:hint="@string/ingresarEmail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/blueGray"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/crearPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/darkBlue"
            android:text="@string/crear"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>